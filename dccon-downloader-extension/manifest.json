{
  "name": "dccon downloader",
  "version": "0.0.3",
  "description": "dccinside dccon downloader",
  "manifest_version": 3,
  "author": "cereme",
  "permissions": [
      "downloads",
      "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
      "*://*.dcinside.com/*",
      "*://dcinside.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "web_accessible_resources": [{
    "resources": ["src/jszip.min.js"],
    "matches": ["*://*.dcinside.com/*", "*://dcinside.com/*"]
  }],
  "content_scripts": [{
      "matches": [
          "*://*.dcinside.com/*",
          "*://dcinside.com/*"
      ],
      "all_frames": true,
      "js": [
          "src/inject.js",
          "src/jszip.min.js"
      ]
    }
  ],
  "action": {
      "default_popup": "src/index.html"
  }
}